				<h2>Search Results</h2>
				    <ol>
					    <% for (var yelpId in locations) { %>
					    	<% var location = locations[yelpId] %>
						<div>
							<h4><li><a href="<%= location.url %>" target="_"><%= location.name %></a></h4>
				    	</div>
				    	<div>
				    		<div id="yelpimg">
				    			<img src="<%= location.image_url %>"></a>
				    		</div>
